<view class="page">
    <view class="page__bd">
        <view class="section section_gap swiper">
            <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}"
                    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
                <block wx:for-items="{{img}}">
                    <swiper-item>
                        <image class="img_swiper" src="http://www.cruisesh.com/src/image/bg{{item}}.jpg" />
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <view class="section">
        <view class="flex-wrp" style="flex-direction:row;">
            <view class="flex-item">
                <view class="flex-wrp" style="flex-direction:column;">
                    <view class="flex-itemzi" bindtap="toast1Tap">
                        <image src="http://www.cruisesh.com/src/image/service_1.png" />
					    <text>船票查询</text>
                        <toast hidden="{{toast1Hidden}}" icon="warn" bindchange="toast1Change">
                            暂未开通，敬请期待
                        </toast>
                    </view>
                    <view class="flex-itemzi">
                        <image src="http://www.cruisesh.com/src/image/service_4.png" />
					    <text>港口指南</text>
                    </view>
                    <view class="flex-itemzi">
                        <image src="http://www.cruisesh.com/src/image/service_7.png" />
					    <text>贵宾服务</text>
                    </view>
                </view>
            </view>
            <view class="flex-item">
                <view class="flex-wrp" style="flex-direction:column;">
                    <view class="flex-itemzi">
                        <image src="http://www.cruisesh.com/src/image/service_2.png" />
					    <text>航班查询</text>
                    </view>
                    <view class="flex-itemzi">
                        <image src="http://www.cruisesh.com/src/image/service_5.png" />
					    <text>相关政策</text>
                    </view>
                        <navigator url="wifi/wifi" >
                            <view class="flex-itemzi">
                                <image src="http://www.cruisesh.com/src/image/service_8.png" />
                                <text>WIFI租赁</text>
                            </view>
                        </navigator>
                </view>
            </view>
            <view class="flex-item">
                <view class="flex-wrp" style="flex-direction:column;">
                    <view class="flex-itemzi">
                        <image src="http://www.cruisesh.com/src/image/service_3.png" />
					    <text>注意事项</text>
                    </view>
                    <view class="flex-itemzi">
                        <image src="http://www.cruisesh.com/src/image/service_6.png" />
					    <text>邮轮产品</text>
                    </view>
                    <view class="flex-itemzi">
                        
                    </view>
                </view>
            </view>
        </view>
        </view>
    </view> 
</view>
