.page-body-wrapper {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.page-body-title1 {
  font-size: 50rpx;
  /*TODO 使用 rpx */
  line-height: 40px;
  margin-bottom: 20px;
}
.page-body-text {
  color: #bbb;
  font-size: 28rpx;
  /*TODO 使用 rpx */
  line-height: 20px;
  margin: 0 0 50rpx 0;
  text-align: center;
}
.page-body-button {
  background-color: #1E2B5A !important;
  margin:20px 10px;
}
.userinfo-avatar {
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
}
.userinfo-nickname {
  margin-top: 20rpx;
  font-size: 38rpx;
}
.userinfo{
  display: flex;
  flex-direction: column;
  margin-top:20px;
}
.leaderno{
    border: 1px solid #bbb;
    margin-top:20px;
    height: 30px;
}
/* page/pay/index.wxss */
.picker{
    padding:10px 16px;
    background-color: #FFFFFF;
}
.widgets__list{
    display: none;
}
.widgets__list_show{
    display: block;
}
.btn_primary{
    margin:20px 10px;
}
/*按钮*/  
.btn {  
  font-size: 28rpx;  
  padding: 15rpx 30rpx;  
  width: 100rpx;  
  margin: 20rpx;  
  text-align: center;  
  border-radius: 10rpx;  
  border: 1px solid #000;  
}  
/*mask*/  
.toast_mask {  
  opacity: 0;  
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/  
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
  top:10rpx;
}  
.toast_content {  
  width: 50%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
}  
.clause{
  display:inline;
}


