}
.widgets__info{
    display: flex;
    padding: 10px;
    align-items: center;
    flex-direction:column;
    color:#D9F3FF;
    background: #28528E;
}
.widgets__info_show{
    opacity: .4;
}
.widgets__info-name{
    flex: 1;
}
.widgets__info-img{
    width: 30px;
    height: 30px;
}

.widgets__list{
    display: none;
}
.widgets__list_show{
    display: block;
}
